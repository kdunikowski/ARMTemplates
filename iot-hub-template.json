{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "iotHubName": {
            "type": "String"
        },
        "location": {
            "type": "string"
        },
        "skuName": {
            "type":"string"
        },
        "tier": {
            "type":"string"
        },
        "capacity": {
            "type":"int"
        },
        "retentionTimeInDays": {
            "type":"int"
        },
        "partitionCount": {
            "type":"int"
        },
        "eventHubs": {
            "type":"array"
        },
        "routes": {
            "type":"array"
        }
    },
      "variables": {
        "storageAccountName": "[concat(toLower(parameters('iotHubName')),'123')]",
        "storageContainerName": "[concat(toLower(parameters('iotHubName')), 'results')]"
    },
    "resources": 
    [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2020-03-01",
            "name": "[parameters('iotHubName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('tier')]",
                "capacity": "[parameters('capacity')]"
            },
            "identity": {
                "type": "None"
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": "[parameters('retentionTimeInDays')]",
                        "partitionCount": "[parameters('partitionCount')]"
                    }
                },
                "routing": {
                    "endpoints": {
                        "serviceBusQueues": [],
                        "serviceBusTopics": [],
                        "eventHubs": {
                            "copy": [
                                {
                                        "name": "iotHub-eventHubs",
                                        "count": "[length(parameters('eventHubs'))]",
                                        "mode": "serial",
                                        "input":
                                        {
                                            "connectionString": "[concat('Endpoint=sb://iot-backbone-event-hub-test.servicebus.windows.net:5671/;SharedAccessKeyName=iothubroutes_', parameters('iotHubName'), ';SharedAccessKey=****;EntityPath=iotbackeventhub')]",
                                            "name": "[parameters('eventHubs')[copyIndex('iotHub-eventHubs', 0)].name]",
                                            "subscriptionId": "[subscription().subscriptionId]",
                                            "resourceGroup": "[resourceGroup().name]"
                                        }
                                }
                            ]
                        }
                    },
                    "routes": {
                          "copy": [
                                    {
                                        "name": "iotHub-routes",
                                        "count": "[length(parameters('routes'))]",
                                        "mode": "serial",
                                        "input":
                                        {
                                                    "name": "[parameters('routes')[copyIndex('iotHub-routes', 0)].name]",
                                                    "source": "[parameters('routes')[copyIndex('iotHub-routes', 0)].source]",
                                                    "condition": "[parameters('routes')[copyIndex('iotHub-routes', 0)].condition]",
                                                    "endpointNames":"[parameters('routes')[copyIndex('iotHub-routes', 0)].endpointNames]",
                                                    "isEnabled": true
                                        }
                                    }]
                    },
                    "fallbackRoute": {
                        "name": "$fallback",
                        "source": "DeviceMessages",
                        "condition": "true",
                        "endpointNames": [
                            "events"
                        ],
                        "isEnabled": true
                    }
                },
                "enableFileUploadNotifications": false,
                "features": "None"
            }
        }
    ]
}