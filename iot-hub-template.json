{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "iotHubName": {
            "type": "String"
        },
        "location": {
            "type": "string"
        },
        "skuName": {
            "type":"string"
        },
        "tier": {
            "type":"string"
        },
        "capacity": {
            "type":"int"
        },
        "retentionTimeInDays": {
            "type":"int"
        },
        "partitionCount": {
            "type":"int"
        },
        "eventHubs": {
            "type":"array"
        },
        "routes": {
            "type":"array"
        }
    },
    "variables": {
    },
    "resources": 
    [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2017-07-01",
            "name": "[parameters('iotHubName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('tier')]",
                "capacity": "[parameters('capacity')]"
            },
            "identity": {
                "type": "None"
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": "[parameters('retentionTimeInDays')]",
                        "partitionCount": "[parameters('partitionCount')]"
                    }
                },
                "routing": {
                    "endpoints": {
                        "serviceBusQueues": [],
                        "serviceBusTopics": [],
                        "eventHubs": [{

                        
                                            "connectionString": "[listkeys(resourceId('Microsoft.EventHub/namespaces/eventhubs/authorizationRules', 'iot-backbone-event-hub-test', 'iotbackeventhubb', 'iothubroutes_testbbiothub'), '2017-04-01').primaryConnectionString]",
                                            "name": "iotbackeventhubb",
                                            "subscriptionId": "[subscription().subscriptionId]",
                                            "resourceGroup": "[resourceGroup().name]"
                                        }
                                
                            ]
                        
                    },
                    "routes": [

                                    
                    ],
                    "fallbackRoute": {
                        "name": "$fallback",
                        "source": "DeviceMessages",
                        "condition": "true",
                        "endpointNames": [
                            "events"
                        ],
                        "isEnabled": true
                    }
                },
                "enableFileUploadNotifications": false,
                "features": "None"
            }
        }
    ]
}