{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "iotHubName": {
            "type": "String"
        },
        "location": {
            "type": "string"
        },
        "skuName": {
            "type":"string"
        },
        "tier": {
            "type":"string"
        },
        "capacity": {
            "type":"int"
        },
        "retentionTimeInDays": {
            "type":"int"
        },
        "partitionCount": {
            "type":"int"
        },
        "eventHubs": {
            "type":"array"
        },
        "routes": {
            "type":"array"
        }
    },
      "variables": {
        "storageAccountName": "[concat(toLower(parameters('iotHubName')),'123')]",
        "storageContainerName": "[concat(toLower(parameters('iotHubName')), 'results')]"
    },
    "resources": 
    [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2020-03-01",
            "name": "[parameters('iotHubName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('tier')]",
                "capacity": "[parameters('capacity')]"
            },
            "identity": {
                "type": "None"
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": "[parameters('retentionTimeInDays')]",
                        "partitionCount": "[parameters('partitionCount')]"
                    }
                },
                "enableFileUploadNotifications": false,
                "features": "None"
            }
        }
    ],
    "outputs" : {
            "eventHubs": {
                            "copy": 
                                {
                                        "count": "[length(parameters('eventHubs'))]",
                                        "input":
                                        {
                                            "connectionString": "[listkeys(resourceId('Microsoft.EventHub/namespaces/eventhubs/authorizationRules', parameters('eventHubs')[copyIndex('iotHub-eventHubs', 0)].eventHubNamespaceName, parameters('eventHubs')[copyIndex('iotHub-eventHubs', 0)].eventHubName, parameters('eventHubs')[copyIndex('iotHub-eventHubs', 0)].eventHubAuthRuleName), '2017-04-01').primaryConnectionString]",
                                            "name": "[parameters('eventHubs')[copyIndex('iotHub-eventHubs', 0)].name]",
                                            "id": "test-id-for-eventh-a",
                                            "subscriptionId": "[subscription().subscriptionId]",
                                            "resourceGroup": "[resourceGroup().name]"
                                        }
                                }
                            
                            ,
                            "type": "array"
            },
                                "routes": {
                          "copy": {
                                    "count": "[length(parameters('routes'))]",
                                        "input":
                                        {
                                                    "name": "[parameters('routes')[copyIndex('iotHub-routes', 0)].name]",
                                                    "source": "[parameters('routes')[copyIndex('iotHub-routes', 0)].source]",
                                                    "condition": "[parameters('routes')[copyIndex('iotHub-routes', 0)].condition]",
                                                    "endpointNames":"[parameters('routes')[copyIndex('iotHub-routes', 0)].endpointNames]",
                                                    "isEnabled": true
                                        }
                                    },
                            "type": "array"
                                }

        
    }
}